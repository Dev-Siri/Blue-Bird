{
  "manifest_version": 3,
  "name": "Revive Birb",
  "version": "1.0",
  "description": "Bring back the old twitter logo and also replace many ùïè references with good ol birb.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://twitter.com/*", "<all_urls>"],
  "action": {
    "default_icon": {
      "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "app/loading.js",
        "images/twitter.avif",
        "images/banner.avif",
        "images/auth-hero-banner.avif",
        "images/favicon.ico"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "app/init.js",
        "app/global.js",
        "app/title.js",
        "app/logout.js",
        "app/profiles/x.js",
        "app/auth.js"
      ],
      "matches": ["https://twitter.com/*"]
    },
    {
      "js": ["app/inject-loading.js"],
      "css": ["styles/loading.css"],
      "run_at": "document_start",
      "matches": ["https://twitter.com/*"]
    }
  ],
  "icons": {
    "16": "./icons/16.png",
    "32": "./icons/32.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  }
}
