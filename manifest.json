{
  "manifest_version": 3,
  "name": "Blue Bird",
  "version": "1.0",
  "description": "Bring back the old twitter logo and also replace many ùïè references with good ol birb.",
  "action": {},
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://twitter.com/*", "<all_urls>"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "app/loading.js",
        "images/twitter.avif",
        "images/banner.avif"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": ["app/init.js", "app/global.js", "app/title.js"],
      "matches": ["https://twitter.com/*"]
    },
    {
      "js": ["app/profiles/x.js"],
      "matches": ["https://twitter.com/X"]
    },
    {
      "js": ["app/inject-loading.js"],
      "css": ["styles/loading.css"],
      "run_at": "document_start",
      "matches": ["https://twitter.com/*"]
    }
  ],
  "icons": {
    "16": "./icons/16x16.png",
    "19": "./icons/19x19.png",
    "38": "./icons/38x38.png",
    "48": "./icons/48x48.png",
    "128": "./icons/128x128.png"
  }
}
